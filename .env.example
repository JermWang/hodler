# Frontend (NEXT_PUBLIC_*)
# These are exposed to the browser.

# Which Solana cluster the UI should target.
NEXT_PUBLIC_SOLANA_CLUSTER=mainnet-beta

# Optional: override the frontend RPC endpoint.
# If unset, the UI uses Solana's default cluster RPC.
NEXT_PUBLIC_SOLANA_RPC_URL=

# Optional: show your token contract address in the top nav ("CA" pill)
NEXT_PUBLIC_TOKEN_CONTRACT_ADDRESS=

NEXT_PUBLIC_CLOSED_BETA_START_ISO=


# Server (Next.js API routes)

# Privy (required for pump.fun launch signing)
PRIVY_APP_ID=
PRIVY_APP_SECRET=

# Solana RPC used server-side.
# Recommended: use a reliable paid provider for production.
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com

# Server-side cluster selector used for CAIP2 (if NEXT_PUBLIC_SOLANA_CLUSTER isn't set).
SOLANA_CLUSTER=mainnet-beta

# Optional: explicitly set CAIP2 chain id for Privy (otherwise derived from *_SOLANA_CLUSTER).
# mainnet-beta: solana:5eykt4UsFv8P8NJdTREpY1vzqKqZKvdp
# devnet: solana:EtWTRABZaYq6iMfeYKouRu166VU2xqa1
# testnet: solana:4uhcVJyU9pJkvQyS88uRDiswHXSCkY3z
SOLANA_CAIP2=

# Commitment used for server-side Solana reads/confirmations.
# Recommended: confirmed
SOLANA_COMMITMENT=confirmed


# Database
# Supabase Postgres connection string (server-side).
# You get this from Supabase Dashboard:
# Settings -> Database -> Connection string -> URI
# Use the "Direct connection" string for local dev.
# For Vercel/serverless, you may prefer the "Connection pooling" string (Supabase Pooler) if you hit connection limits.
# Example (direct):
# postgres://postgres:<db_password>@db.<project-ref>.supabase.co:5432/postgres?sslmode=require
# Example (pooler):
# postgres://postgres.<project-ref>:<db_password>@aws-0-<region>.pooler.supabase.com:6543/postgres?sslmode=require
DATABASE_URL=

PG_POOL_MAX=
PG_POOL_CONNECTION_TIMEOUT_MS=
PG_POOL_IDLE_TIMEOUT_MS=

# Optional: mock mode disables DB usage in some helpers.
CTS_MOCK_MODE=


# Admin auth
# Comma-separated list of allowed admin wallet pubkeys.
ADMIN_WALLET_PUBKEYS=

# Optional: enforce Origin checking for admin endpoints.
# Example: https://commit-to-ship.vercel.app
APP_ORIGIN=


# Supabase Storage (avatars)
# Required only if you use the avatar upload endpoint.
SUPABASE_URL=
SUPABASE_SERVICE_ROLE_KEY=

# Optional: default bucket name (defaults to "avatars")
SUPABASE_AVATAR_BUCKET=avatars

# Rewards / voting
# Optional: USD-weighted approval threshold required for a milestone to become claimable.
# If unset, the app falls back to REWARD_APPROVAL_THRESHOLD * $20.
REWARD_APPROVAL_THRESHOLD_USD=

# Number of unique holder approval signals required for a milestone to become claimable.
REWARD_APPROVAL_THRESHOLD=20

# Delay between creator marking a milestone complete and it becoming claimable (seconds).
# Default behavior (if unset) is 48 hours.
REWARD_CLAIM_DELAY_SECONDS=

# Voting cutoff window (seconds).
# Default behavior (if unset) is 24 hours.
REWARD_VOTE_CUTOFF_SECONDS=


# SHIP (optional)
# Used to apply SHIP-holder multipliers and route buyback proceeds.
CTS_SHIP_TOKEN_MINT=
CTS_SHIP_BUYBACK_TREASURY_PUBKEY=


# Escrow (optional)
# Optional: encrypt escrow secret keys at rest in the database.
# If unset, escrow secret keys are stored in plaintext (NOT recommended for real funds).
ESCROW_DB_SECRET=

# Optional: fee payer for escrow resolution + pump.fun claims.
# If unset, the escrow wallet itself pays transaction fees.
ESCROW_FEE_PAYER_SECRET_KEY=


# Audit / alerts (optional)
AUDIT_WEBHOOK_URL=


# Jupiter price cache
# Optional: cache TTL for Jupiter token price fetches (seconds).
JUPITER_PRICE_CACHE_TTL_SECONDS=60

JUPITER_PRICE_STALE_TTL_SECONDS=

CRON_SECRET=


# ============================================
# AmpliFi - Twitter/X Integration
# ============================================

# Twitter API v2 OAuth 2.0 credentials
# Get these from https://developer.twitter.com/en/portal/dashboard
# Create an app with OAuth 2.0 enabled and "Read" permissions
TWITTER_CLIENT_ID=
TWITTER_CLIENT_SECRET=

# OAuth callback URL - must match your Twitter app settings
# Example: https://amplifi.app/api/twitter/callback
TWITTER_CALLBACK_URL=

# Optional: Twitter Bearer Token for app-only authentication
# Used for searching tweets without user context
TWITTER_BEARER_TOKEN=


# ============================================
# AmpliFi - Campaign Configuration
# ============================================

# Default epoch duration in seconds (86400 = 1 day)
AMPLIFI_DEFAULT_EPOCH_DURATION=86400

# Minimum token balance required to participate (in smallest unit)
AMPLIFI_MIN_TOKEN_BALANCE=0

# Platform fee percentage (50 = 50%)
AMPLIFI_PLATFORM_FEE_PERCENT=50
