# Frontend (NEXT_PUBLIC_*)
# These are exposed to the browser.

# Public site URL (used for absolute OG/Twitter image URLs in metadata).
NEXT_PUBLIC_SITE_URL=

# Which Solana cluster the UI should target.
NEXT_PUBLIC_SOLANA_CLUSTER=mainnet-beta

# Optional: override the frontend RPC endpoint.
# If unset, the UI uses Solana's default cluster RPC.
NEXT_PUBLIC_SOLANA_RPC_URL=

# Optional: comma-separated list of frontend RPC endpoints.
NEXT_PUBLIC_SOLANA_RPC_URLS=

# Server (Next.js API routes)

# Canonical server URL (used for metadataBase). If unset, defaults to http://localhost:3000
SITE_URL=

# Privy (required for HODLR escrow wallet signing)
PRIVY_APP_ID=
PRIVY_APP_SECRET=

# Privy wallet authorization key (REQUIRED for signing transactions with Privy server wallets)
# Get this from Privy Dashboard -> Developers -> Server wallets -> Authorization keys
# Format: base64-encoded private key (without BEGIN/END markers)
PRIVY_AUTHORIZATION_PRIVATE_KEY=

# Solana RPC used server-side.
# Recommended: use a reliable paid provider for production.
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com

# Optional: comma-separated list of server-side RPC endpoints.
SOLANA_RPC_URLS=

# Server-side cluster selector used for CAIP2 (if NEXT_PUBLIC_SOLANA_CLUSTER isn't set).
SOLANA_CLUSTER=mainnet-beta

# Commitment used for server-side Solana reads/confirmations.
# Recommended: confirmed
SOLANA_COMMITMENT=confirmed


# Database
# Supabase Postgres connection string (server-side).
# You get this from Supabase Dashboard:
# Settings -> Database -> Connection string -> URI
# Use the "Direct connection" string for local dev.
# For Vercel/serverless, you may prefer the "Connection pooling" string (Supabase Pooler) if you hit connection limits.
# Example (direct):
# postgres://postgres:<db_password>@db.<project-ref>.supabase.co:5432/postgres?sslmode=require
# Example (pooler):
# postgres://postgres.<project-ref>:<db_password>@aws-0-<region>.pooler.supabase.com:6543/postgres?sslmode=require
DATABASE_URL=

PG_POOL_MAX=
PG_POOL_CONNECTION_TIMEOUT_MS=
PG_POOL_IDLE_TIMEOUT_MS=

CRON_SECRET=


# ============================================
# HODLR
# ============================================

# Feature flags
NEXT_PUBLIC_HODLR_ENABLED=
NEXT_PUBLIC_HODLR_SHADOW_MODE=

HODLR_ENABLED=
HODLR_SHADOW_MODE=

# Token mint selection (prefer HODLR_TOKEN_MINT)
HODLR_TOKEN_MINT=

# Snapshot qualification filters
HODLR_MIN_BALANCE_RAW=
HODLR_EXCLUDED_WALLETS=
HODLR_EXCLUDE_OFF_CURVE_WALLETS=true

# Ranking
HODLR_TOP_N=50
HODLR_WEIGHT_ALPHA=0.6
HODLR_WEIGHT_BETA=0.4

# Distribution dry run
HODLR_DISTRIBUTION_POOL_LAMPORTS=

# Payout dry run planner
HODLR_PAYOUT_SOURCE_PUBKEY=
HODLR_PAYOUT_MAX_RECIPIENTS=50

# Claims
HODLR_CLAIMS_SEND_ENABLED=false
HODLR_REWARD_CLAIM_TTL_SECONDS=300
HODLR_ESCROW_RESERVE_LAMPORTS=20000000
